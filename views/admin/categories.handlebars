<h2>Lista de categorias: </h2>
<hr>
<a href="/admin/categories/add"><button class="btn btn-success">Nova categoria</button></a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small><br>
            <small> Data de criação: {{date}}</small><br>
            <a href="/admin/categories/edit/{{_id}}"><button class="btn btn-success mt-4">Edit</button></a> 
            <form action="/admin/categories/delete" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Delete</button>
            </form>
        </div>
                 
    </div>

{{else}}
    <h4 class="mt-3">Nenhuma categoria registrada!</h4>

{{/each}}